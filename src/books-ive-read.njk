{#
 # 2. Making the books data into a collection
 #
 # https://11ty.rocks/eleventyjs/collections/#collections-from-custom-data
 #}
{% for book in collections.booksReading %}
  {% if loop.first %}<ol reversed>{% endif %}
  <li><i>{{ book.gsx$title.$t }}</i> by {{ book.gsx$author.$t }}</li>
  {% if loop.last %}</ol>{% endif %}
{% endfor %}

