---
layout: base
---
<article class="post wrapper flow">
  <header class="post__header">
    <h1 class="post__title">{{ title | safe }}</h1>
    <dl class="post__meta">

      <dt class="visually-hidden">Published on</dt>
      <dd><time datetime="{{ page.date | date('iso') }}">{{ page.date | date('nice') }}</time></dd>

      {% if location %}
      <dt class="visually-hidden">Published in</dt>
      <dd>{{ location }}</dd>
      {% endif %}{# Check for location #}

    </dl>
  </header>

  <div class="prose-width prose-flow flow">
    {{ content | safe }}
  </div>

  <footer class="post__footer">
    {% include "partials/tags-list.njk" %}
  </footer>

</article>
