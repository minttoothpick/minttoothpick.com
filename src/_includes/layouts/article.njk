---
layout: layouts/base.njk
pageClass: Page--article
---
<article class="Article Prose Prose--article Prose--contain">
  <header class="Article__header">
    <h1 class="Article__title">{{ title | safe }}</h1>
    <dl class="Article__meta">
      <dt class="visually-hidden">Published on</dt>
      <dd><time datetime="{{ page.date | date('iso') }}">{{ page.date | date('nice') }}</time></dd>
      {% if location %}
      <dt class="visually-hidden">Published in</dt>
      <dd>{{ location }}</dd>
      {% endif %}{# check for location #}
    </dl>
  </header>
  {{ content | safe }}
  <footer class="Article__footer">
    {% include "snippets/tags-list.njk" %}
  </footer>
</article>
