---
layout: layouts/base.njk
pageClass: Page--article
---
{# {% set article = page %} #}
<article class="Article Prose Prose--contain">
  <header class="Article__header">
    {% if display_title != false %}
      <h1 class="Article__title">{{ title | safe }}</h1>
    {% endif %}
    <dl class="Article__meta">
      <dt class="visually-hidden">Published on</dt>
      <dd><time datetime="{{ dateCreated | htmlDateString }}">{{ dateCreated | readableDate }}</time></dd>
      {% if location %}
        <dt class="visually-hidden">Published in</dt>
        <dd>{{ location }}</dd>
      {% endif %}
    </dl>
  </header>
  {{ content | safe }}
  <footer class="Article__footer">
    {% include "snippets/tags-list.njk" %}
  </footer>
</article>
